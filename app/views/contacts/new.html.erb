<div class="container-contact100">
  <div class="wrap-contact100">
  
  <div class="container">
    <%= render 'change_language' %>
  </div>
  
  <%= render 'form', contact: @contact %>

    <div class="contact100-more flex-col-c-m" style="background-image: url(<%= image_path 'bg-01.jpg'%>);">
      <div class="flex-w size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-map-marker"></span>
        </div>

        <div class="flex-col size2">
          <span class="txt1 p-b-20">
            <%= t('contacts.details.address_text') %> 
          </span>

          <span class="txt2">
            <%= t('contacts.details.address') %> 
          </span>
        </div>
      </div>

      <div class="dis-flex size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-phone-handset"></span>
        </div>

        <div class="flex-col size2">
          <span class="txt1 p-b-20">
            <%= t('contacts.details.contact_text') %> 
          </span>

          <span class="txt3">
            +1 800 1236879
          </span>
        </div>
      </div>

      <div class="dis-flex size1 p-b-47">
        <div class="txt1 p-r-25">
          <span class="lnr lnr-envelope"></span>
        </div>

        <div class="flex-col size2">
          <span class="txt1 p-b-20">
            <%= t('contacts.details.support_text') %> 
          </span>

          <span class="txt3">
            contact@example.com
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
